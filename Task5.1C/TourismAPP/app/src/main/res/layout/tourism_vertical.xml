<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewVertical"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/daming_palace_vertical" />

    <TextView
        android:id="@+id/placeNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:gravity="left"
        android:text="Daming Palace"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/placeLocationTextView"
        app:layout_constraintStart_toEndOf="@+id/imageViewVertical"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/placeLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:gravity="left"
        android:text="Xi'an, China"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/placeEvaluateTextView"
        app:layout_constraintStart_toEndOf="@+id/imageViewVertical"
        app:layout_constraintTop_toBottomOf="@+id/placeNameTextView" />

    <TextView
        android:id="@+id/placeEvaluateTextView"
        android:layout_width="284dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:text="Daming Palace is the imperial palace of Tang Dynasty in ancient China, which has a long history and traditional culture."
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewVertical"
        app:layout_constraintTop_toBottomOf="@+id/placeLocationTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>